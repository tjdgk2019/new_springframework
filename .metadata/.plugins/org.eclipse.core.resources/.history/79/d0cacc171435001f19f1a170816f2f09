	<script>
	$(document).on('click', '#boardList > tbody > tr', function() {
	    $.ajax({
	        url: '',
	        type: 'get',
	        success: result => {
	            console.log(result);
	        }
	    });	
	});

	$(document).ready(() => {
	    findTopFiveBoard();
	});
	
		function findTopFiveBoard() {
		    $.ajax({
		        url: 'boards',
		        type: 'get',
		        success: boards => {
		            //console.log(board);
		            
		            let value = "";
		            
		            for(let i in boards){
		            	
		            	value += '<tr>'
		            		  +  '<td>' + boards[i].boardNo + '</td>'
		            		  +  '<td>' + boards[i].boardTitle + '</td>'
		            		  +  '<td>' + boards[i].boardWriter + '</td>'
		            		  +  '<td>' + boards[i].count + '</td>'
		            		  +  '<td>' + boards[i].createDate + '</td>'
		            		  +  '<td>';
		            		  if(boards[i].originName != null){
		            			  value +='💎';		            		  
		            		  }
		            		  + '</td></tr>';
		            }
		            $('#boardList tbody').html(value);
		        }
		    });
		}

	</script>
